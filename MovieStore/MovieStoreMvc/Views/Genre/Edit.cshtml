@model MovieStoreMvc.Models.Domain.Genre
@{
    Layout = "_Layout";
}

<form class="container w-50 mt-4" asp-action="Update" method="post">
    <h2 class="pb-3">Chỉnh sửa thể loại</h2>

    <div class="form-group">
        <input type="hidden" class="form-control" asp-for="Id">
    </div>

    <div class="form-group">
        <label asp-for="GenreName">Tên Thể Loại</label>
        <input type="text" class="form-control" asp-for="GenreName">
        <span asp-validation-for="GenreName" class="text-danger"></span>
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="alert alert-success mb-3">
            @TempData["msg"]
        </div>
    }

    <div class="form-group">
        <button class="btn btn-primary" type="submit">Lưu</button>
        <a class="btn btn-secondary" href="/Genre/GenreList">Xem tất cả</a>
    </div>
</form>
