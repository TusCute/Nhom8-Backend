@model IEnumerable<MovieStoreMvc.Models.Domain.Genre>

<div class="container mt-4">
    <h2>Thể loại</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Thể loại</th>
                <th>Hành động chỉnh sửa</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.GenreName</td>
                    <td>
                        <a href="/Genre/Edit?id=@item.Id" class="btn btn-primary"><i class="fa fa-edit"></i> Chỉnh sửa</a>
                        <a onclick="return window.confirm('Are you sure?')" href="/Genre/Delete?id=@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i> Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="input-container">
        <a href="/Genre/Add" class="btn btn-secondary">Quay lại</a>
    </div>
</div>
