@model MovieStoreMvc.Models.DTO.MovieListVm

<section>
    <div class="container-fluid mt-4">
        <h2>Danh Sách Tin Tức</h2>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Tiêu Đề</th>
                        <th>Thể Loại</th>
                        <th>Ngày Đăng</th>
                        <th>Ảnh</th>
                        <th>Diễn Viên</th>
                        <th>Tin Tức</th>
                        <th>Quốc Gia</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ReviewList)

                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.GenreNames</td>
                            <td>@item.ReleaseYear</td>
                            <td>
                                <img style="max-height: 60px; max-width: 80px" src="/Uploads/@item.ReviewImage"
                                     class="img-fluid" />
                            </td>
                            <td>@item.Cast</td>
                            <td>@item.Description</td>
                            <td>@item.Director</td>
                            <td>
                                <a href="/Review/Edit?id=@item.Id" class="btn btn-primary">
                                    <i class="fa fa-edit"></i>
                                    Chỉnh Sửa
                                </a>
                                <a onclick="return window.confirm('Bạn có chắc muốn xóa nội dung này chứ ?')" href="/Review/Delete?id=@item.Id"
                                   class="btn btn-danger"><i class="fa fa-trash"></i> Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="input-container mt-3">
            <a href="/Review/Add" class="btn btn-success">Thêm Mới Tin Tức</a>
        </div>
        <div class="input-container mt-3">
            <a href="/Review/Add" class="btn btn-primary">Quay lại</a>
        </div>
    </div>
</section>
